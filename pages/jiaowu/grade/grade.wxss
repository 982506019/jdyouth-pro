/* grade.wxss */

.weui-flex {
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.weui-cells {
  margin-top: 0;
  opacity: 0;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  -webkit-transition: 0.3s;
  transition: 0.3s;
  font-size: 0.8rem;
  color: #666;
}

.weui-cells:after, .weui-cells:before {
  display: none;
}

.weui-cells_show {
  opacity: 1;
  -webkit-transform: translateY(0);
  transform: translateY(0);
  font-size: 0.8rem;
  color: #666;
}

.weui-cell:before {
  right: 15px;
}

.kind-list__item {
  margin: 1px 0;
  background-color: #fff;
  overflow: hidden;
}

.kind-list__item:first-child {
  margin-top: 0;
}

.kind-list__img {
  width: 30px;
  height: 30px;
}

.kind-list__item-hd {
  padding: 5px 20px;
  -webkit-transition: opacity 0.3s;
  transition: opacity 0.3s;
}

.kind-list__item-hd_show {
  opacity: 0.4;
}

.kind-list__item-bd {
  box-sizing: border-box;
  padding: 5px 20px;
  height: 0;
  overflow: hidden;
}

.kind-list__item-bd_show {
  height: auto;
}
.grade{
  width: 50px;
}
.label{
  width: 100px;
}