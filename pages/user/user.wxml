<!--user.wxml-->
<view class="page">
  <view class="head">
    <image src="{{userInfo.avatarUrl}}" class="avatar"></image>
    <view class="nickname">{{userInfo.nickName}}</view>
  </view>
  <view class="page__bd">
    <view class="weui-cells__title">个人信息</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <image src="../../images/user/id.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">学号</view>
        <view class="weui-cell__ft">{{stuinfo.stuid}}</view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__hd">
          <image src="../../images/user/name.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">姓名</view>
        <view class="weui-cell__ft">{{stuinfo.name}}</view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__hd">
          <image src="../../images/user/sex.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">性别</view>
        <view class="weui-cell__ft">{{stuinfo.sex}}</view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__hd">
          <image src="../../images/user/birthday.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">生日</view>
        <view class="weui-cell__ft">{{stuinfo.birthday}}</view>
      </view>
    </view>
    <view class="weui-cells__title">其他</view>
        <view class="weui-cells weui-cells_after-title">
            <navigator url="/pages/account/account" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd">修改绑定</view>
                <view class="weui-cell__ft weui-cell__ft_in-access">点此修改</view>
            </navigator>
        </view>
  </view>
</view>